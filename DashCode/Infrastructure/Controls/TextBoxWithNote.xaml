<UserControl x:Class="DashCode.Infrastructure.Controls.TextBoxWithNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DashCode.Infrastructure.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="80" Name="This">
    <Grid>
        <TextBox x:Name="InputTextBlock" Panel.ZIndex="0" TextChanged="InputTextBlock_TextChanged" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Margin="4,0,0,0" IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                       x:Name="NoteTextBlock" Text="{Binding NoteText, ElementName=This}" Panel.ZIndex="1" Opacity="0.4"/>
    </Grid>
</UserControl>
