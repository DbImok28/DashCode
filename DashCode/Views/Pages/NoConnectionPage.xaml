<Page x:Class="DashCode.Views.Pages.NoConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:DashCode.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NoConnectionPage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="20">
            <TextBlock Text="No connection to server"/>
            <Button Margin="2,0" Click="RefreshButton_Click">
                <fa:FontAwesome Icon="RotateRight" FontSize="10" Width="10" Height="10"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
