<Window x:Class="DashCode.Views.Windows.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:DashCode.Infrastructure.Commands"
        xmlns:vm="clr-namespace:DashCode.ViewModules"
        xmlns:l="clr-namespace:DashCode.View.Windows"
        xmlns:controls="clr-namespace:DashCode.Infrastructure.Controls"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="480" Width="720" Background="{StaticResource ElementBackgroundColor}" DataContext="{Binding FirstVM, Source={StaticResource vmlocator}}">
    <DockPanel Margin="40">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Margin="10" Text="Open" FontSize="20" Height="30"/>
            <StackPanel Orientation="Horizontal" Margin="10,0,0,10">
                <Grid>
                    <TextBox Width="300" Height="30" HorizontalAlignment="Left" Margin="0,0,8,0" BorderBrush="Gray"/>
                    
                </Grid>
                <Button Width="30" Height="30" BorderThickness="1" BorderBrush="Gray">O</Button>
            </StackPanel>
            <ListBox>
            <TextBlock>123</TextBlock>
            <TextBlock>123</TextBlock>
            <TextBlock>123</TextBlock>
            <TextBlock>123</TextBlock>
        </ListBox>
    </StackPanel>
        <StackPanel Margin="10" DockPanel.Dock="Right" Width="160" HorizontalAlignment="Right">
            <TextBlock Text="Login" FontSize="20" Height="30"/>
            <Image Width="80" Height="80" Margin="8" Source="/Resources/user_no_login.png"/>
            <controls:TextBoxWithNote NoteText="Login" Margin="2"/>
            <controls:TextBoxWithNote NoteText="Password" Margin="2"/>
            <CheckBox Margin="4,2" FlowDirection="RightToLeft" Foreground="{StaticResource TextColor}">
                <TextBlock Text="Show password"/>
            </CheckBox>
            <Button Height="22" Width="160" Margin="0,4" Background="{StaticResource ElementForegroundColor}">
                <TextBlock Text="Login" Foreground="{StaticResource MutedTextColor}"/>
            </Button>
        </StackPanel>
    </DockPanel>
</Window>
